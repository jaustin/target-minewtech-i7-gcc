{
  "name": "minewtech-i7-gcc",
  "version": "1.0.0",
  "inherits": {
    "nordic-nrf51822-gcc": "^1.0.0"
  },
  "description": "Minewtech i7 beacon target - for beacons like the following http://minew.en.alibaba.com/search/product?fsb=y&IndexArea=&CatId=&SearchText=i7",
  "licenses": [
    {
      "url": "https://spdx.org/licenses/Apache-2.0",
      "type": "Apache-2.0"
    }
  ],
  "keywords": [
    "gcc",
    "minewtech",
    "beacon"
  ],
  "similarTo": [
    "mkit"
  ],
  "config": {
    "nrf51822": {
      "ram_size": "16K"
    },
    "image": {
      "heap": {
        "warning_threshold": 1024
      }
    },
    "hardware": {
      "clocks": {
        "nrf": {
          "lfclk_src": 0
        }
      },
      "pins": {
        "BUTTON1": "p18",
        "BUTTON2": "p8",
        "LED1": "p15",
        "LED2": "p16",
        "LED3": "p12",
        "LED4": "p16",
        "TX_PIN_NUMBER": "p26",
        "RX_PIN_NUMBER": "p27",
        "CTS_PIN_NUMBER": "31",
        "RTS_PIN_NUMBER": "31"
      }
    }
  }
}